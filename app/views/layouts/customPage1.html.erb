<!DOCTYPE html>
<html>
  <head>
    <title>Stubloom</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/18d078742a.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield :css %>
  </head>

  <body>
    <header>
      <div class="container">
        <div class="row pt-2">
          <div class="col-5">
            <%= link_to "#" do %><i class="fa-brands fa-aws fa-2x"></i><% end %>
            <%= link_to "#", class: "mx-3" do %><i class="fa-solid fa-grip-vertical fa-lg"></i>サービス<% end %>
            検索フォーム
          </div>
          <div class="col-3 pt-2 ml-auto">
            <%= link_to "#" do %><i class="fa-solid fa-terminal mx-1"></i><% end %>
            <%= link_to "#" do %><i class="fa-regular fa-bell mx-1"></i><% end %>
            <%= link_to "#" do %><i class="fa-regular fa-circle-question mx-1"></i><% end %>
            <%= link_to "#" do %><i class="fa-solid fa-gear mx-1"></i><% end %>

            * <%= link_to "top", root_path %>
          </div>
        </div>
      </div>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      footer
    </footer>
  </body>
</html>
