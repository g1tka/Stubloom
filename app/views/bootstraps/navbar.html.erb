      </div>
    </nav>
  </div>
</div>

<script>
  window.addEventListener('resize', function() {
  const sidebar = document.querySelector('.sidebar');
  if (window.innerWidth <= 768) {
    sidebar.style.width = '100%';
  } else {
    sidebar.style.width = '250px';
  }
});
</script>